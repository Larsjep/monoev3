<HTML>
	<HEAD>
		<TITLE>MonBrick Webserver</TITLE>
		<style type="text/css">
			body {background-image:url('Images/background.jpg');}
			table.inner
			{
				text-align: left;
				vertical-align: middle;
				border:none;
				border-collapse: collapse;
				color: black;
			}
			tr.inner:nth-child(even)
			{
				background: #d7d7d7;
			}
			tr.inner:nth-child(odd)
			{
				background: #e9e9e9;
			}
			th.inner
			{
				padding: 4px;
				font-weight: normal;
			}

			table.outer
			{
				width: 930px;
				color: white;
				align: center;
				vertical-align: middle;
			}

			th.outer
			{
				background: #f2690d;
				vertical-align: middle;
				border-collapse: separate;
			}
			td.outer
			{
				padding: 0px;
				color: black;
				text-align: center;
				vertical-align: middle;
			}
			tr.outer:nth-child(odd)
			{
				background: #d7d7d7;
			}
			tr.outer:nth-child(even)
			{
				background: #e9e9e9;
			}

			.ui-widget.motor-dialog {
			    font-family: Verdana,Arial,sans-serif;
			    font-size: .8em;
			}

			.ui-widget-content.motor-dialog {
			    background: #F9F9F9;
			    border: 1px solid #f2690d;
			    color: black;
			    text-color: black;
			}

			.ui-dialog.motor-dialog {
			    left: 0;
			    outline: 0 none;
			    padding: 0 !important;
			    position: absolute;
			    top: 0;
			}

			.ui-dialog.motor-dialog .ui-widget-header {
			    background: #f2690d;
			    border: 0;
			    font-weight: normal;
			    color: white;
			}

			.ui-dialog.motor-dialog .ui-dialog-titlebar {
			    padding: 0.1em .5em;
			    position: relative;
			    font-size: 1em;
			}

			position: {
				my: "center",
				at: "center",
				of: $("body"),
				within: $("body")
			}
		</style>
		<link href="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.1/themes/smoothness/jquery-ui.min.css" rel="stylesheet">
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
		<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.1/jquery-ui.min.js"></script>
	    <script>
	        function showLoadDialog()
			{
			    $("#dialog-loading").dialog(
			    {
			        closeOnEscape: false,
			        close: false,
			        modal: true,
				    draggable: false,
				    resizable: false,
				    show: 'blind',
				    hide: 'blind',
				    width: 200,
				    height: 100,
				    dialogClass: 'no-close motor-dialog',
				    position: {
	                    my: "center",
	                    at: "center",
	                    of: $("body"),
	                    within: $("body")
                	},
                	open: function(event, ui) { jQuery('.ui-dialog-titlebar-close').hide(); },
			     });
			}
			function hideLoadDialog()
			{
			   	$("#dialog-loading").dialog( "close" );
			}

			function startProgram(fileName)
			{
				$.get("program/"+ fileName + "/start/", {}, function(data,status){});
				updateTable();
			}
		    
		    function stopProgram(fileName)
			{
   			     $.get("program/"+ fileName + "/stop/", {}, function(data,status){});
   			     updateTable();
			}

			function deleteProgram(fileName)
			{
   			     $.get("program/"+ fileName + "/delete/", {}, function(data,status){});
   			     updateTable();
			}
			function updateTable()
			{
				$.ajax({url: "/program",dataType: "JSON"}).success(function(data)
					{
							showLoadDialog();
							$("#dataTable td").parent().remove();
							for (var i = 0; i < data.length; i++) 
							{
	    						 var row = $("<tr class=\"outer\" />")
	    						 $("#dataTable").append(row); //this will append tr element to table... keep its reference for a while since we will add cels into it
	    						 row.append($("<td class=\"inner\" align=\"center\"><font color=black>" + data[i].name + "</font></td>"));
	    						 row.append($("<td class=\"inner\" align=\"center\"><font color=black>" + data[i].isRunning + "</font></td>"));
	    						 row.append($("<td class=\"inner\" align=\"center\"><font color=black>" + data[i].programLocation + "</font></td>"));
	    						 row.append($("<td class=\"inner\" align=\"center\"><input type=\"button\" name=\""+ data[i].name +"\"  id=\"" + data[i].name + "start\" value=\"Start\")>&nbsp;&nbsp;<input type=\"button\" name=\""+ data[i].name +"\"  id=\"" + data[i].name + "stop\" value=\"Stop\">&nbsp;&nbsp;<input type=\"button\" name=\""+ data[i].name +"\"  id=\"" + data[i].name + "delete\" value=\"Delete\"></td>"));
	    						 document.getElementById(data[i].name + "start").onclick = function(){startProgram(this.name);};
	    						 document.getElementById(data[i].name + "stop").onclick = function(){stopProgram(this.name);};
	    						 document.getElementById(data[i].name + "delete").onclick = function(){deleteProgram(this.name);};
	    						 
	    					}
							hideLoadDialog();
					});
			}


	    </script>
        <script>
			$(document).ready(function()
			{
				updateTable();
			});
		</script>
	</HEAD>
	<BODY onLoad="showLoadDialog()">

		<center><img src="Images/Title.png"/></center>
		<p style="border-top-width: 1px; border-top-style: solid; border-top-color: #f26100; padding-top: 10px;"></p>
		<div id="dialog-loading" title="Updating program list" style="display: none;">    
			 		<font color="black">
			    	<div style="margin-left: 23px;">
			        <p>
			            Please wait...
			        </p>
					</div>
					</font>
		</div>

		<center>
			<table class="outer" id="dataTable">
				<tr class="outer">
			        <th class="outer" width="25%">Program Name</th>
					<th class="outer" width="25%">Is Running</th>
					<th class="outer" width="25%">Location</th>
					<th class="outer" width="25%">Actions</th>
			    </tr>
			    <td>
			    </td>
			</table>
			<br>
			<input type="button" value="Refresh program list" onclick=updateTable()> 
			<br>
		<br>
		<sup><font color="#999999">Powered by</font></sup>
		<br>

		<a href="http://nancyfx.org/"><img src="Images/nancyLogo.png"/></a>

		</center>
		<p align="right">
			
		</p>
	</BODY>
</HTML>